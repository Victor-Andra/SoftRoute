<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title>Peculiaridades da Fichas de Frequência - Exceções</title>
			<script type="text/javascript">
				function selectConv(){
				let	v1 = document.getElementById(document.getElementById("excecaoBeneid").value).value.toString();
					console.log(v1)
					document.getElementById("excecaoConvid").value = v1;
				}

				function atualizaConvId(){
				let	convId = document.getElementById("excecaoConvid").value;
					console.log(convId)
				}
				function atualizaTerapeuta() {
					var selectId = "excecaoTerapeutaid" + "temp";
					var inputId = "excecaoTerapeutaid";

					var selectedValues = $('#' + selectId).val();
					var formattedValues = selectedValues ? selectedValues.join(',') : '';

					$('#' + inputId).val(formattedValues);
				}
				function atualizaSubstituto() {
					var selectId = "excecaoSubstitutoid" + "temp";
					var inputId = "excecaoSubstitutoid";

					var selectedValues = $('#' + selectId).val();
					var formattedValues = selectedValues ? selectedValues.join(',') : '';

					$('#' + inputId).val(formattedValues);
				}

				$(document).ready(function(){
					$(".chosen-select-especial").chosen({allow_single_deselect:true});
				});

				function carregaBody(){
				document.getElementById("excecaoBeneid").value = document.getElementById("excecaoBeneidEdi").value;
				document.getElementById("excecaoConvid").value = document.getElementById("excecaoConvidEdi").value;
				
				document.getElementById("excecaoTerapiaid").value = document.getElementById("excecaoTerapiaidEdi").value;

				document.getElementsByName("excecaoTerapeutaid").value = document.getElementById("excecaoTerapeutaidEdi").value;
				document.getElementsByName("excecaoSubstitutoid").value = document.getElementById("excecaoSubstitutoidEdi").value;
				document.getElementById("excecaoObs").value = document.getElementById("excecaoObsEdi").value;
				}
			</script>
			<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>

			<script>
				$(document).ready(function(){
					$(".chosen-select-especial").chosen({allow_single_deselect:true});
				});
			</script>
	</head>

	<body onload="javascript:controlaNave();carregaBody();" class="no-skin">


		<div class="main-container ace-save-state" id="main-container">


			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Home</a>
							</li>

							<li class="active">Peculiaridades da Fichas de Frequência - Exceções</li>
						</ul><!-- /.breadcrumb -->

					</div>

					<div class="row">
						<div class="col-xs-12">
							<!-- PAGE CONTENT BEGINS -->
							<form class="form-horizontal" role="form" action="/menu/beneficiario/excecao/atualizar" method="POST">
								<input class="hidden" id="excecaoId" name="excecaoId" value="{{excecao._id}}" />
								<div class="form-horizontal" role="form" >
									<input type="text" id="excecaoBeneidEdi" name="excecaoBeneidEdi" value="{{excecao.excecao_beneid}}"/>
									<input type="text" id="excecaoConvidEdi" name="excecaoConvidEdi" value="{{excecao.excecao_convid}}"/>
									<input type="text" id="excecaoTerapiaidEdi" name="excecaoTerapiaidEdi" value="{{excecao.excecao_terapiaid}}"/>
									<input type="text" id="excecaoTerapeutaidEdi" name="excecaoTerapeutaidEdi" value="{{excecao.excecao_terapeutaid}}"/>
									<input type="text" id="excecaoSubstitutoidEdi" name="excecaoSubstitutoidEdi" value="{{excecao.excecao_substitutoid}}"/>
									<input type="text" id="excecaoObsEdi" name="excecaoObsEdi" value="{{excecao.excecao_obs}}"/>
								</div>	
									<div class="col-sm-12" ><!-- Widget Dados Básicos -->
										<div class="widget-box">
											<div class="widget-header">
												<h4 class="widget-title">Peculiaridades da Fichas de Frequência - Exceções</h4>

												<span class="widget-toolbar">

													<a href="#" data-action="reload">
														<i class="ace-icon fa fa-refresh"></i>
													</a>

													<a href="#" data-action="collapse">
														<i class="ace-icon fa fa-chevron-up"></i>
													</a>

												</span>
											</div>
											<div class="widget-body">
												<div class="widget-main">
													<label>Beneficiário</label>
													<div class="hidden">
														{{#each benes}}
															{{#each ../convs}}
																{{#ifEqual ../bene_convid _id}}
																	<input value="{{../bene_convid}}" id="{{../_id}}" name="refBeneConv" />
																{{/ifEqual}}
															{{/each}}
														{{/each}}
														<input value="X" id="X" name="refBeneConv" />
													</div>
													<div class="form-group">
														<div class="col-sm-10">
															<select id="excecaoBeneid" name="excecaoBeneid" class="chosen-select" data-placeholder="Escolha..." onchange="javascript:selectConv()">
																	<option value="766f69643132333435366964"></option>
																	{{#each benes}}
																	<option value="{{_id}}">{{bene_nome}}</option>
																	{{/each}}
															</select>
														</div>
													</div>
													<label>Convênio</label>		
													<div class="form-group">
															<div class="col-sm-4">
																<select style="pointer-events: none;touch-action: none;" tabindex="-1" aria-disabled="true" id="excecaoConvid" name="excecaoConvid" class="chosen-select" data-placeholder="Escolha...">
																		<option value="766f69643132333435366964"></option>
																		{{#each benes}}
																			{{#each ../convs}}
																				{{#ifEqual ../bene_convid _id}}
																					<option value="{{../bene_convid}}">{{conv_nome}}</option>
																				{{/ifEqual}}
																			{{/each}}
																		{{/each}}
																</select>
															</div>
													</div>
													<table id="dynamic-table" class="table table-striped table-bordered table-hover">
														<thead>
															<tr>
																<th style="width: 10%;"colspan="1"><label>Terapia</label></th>
																<th style="width: 30%;"colspan="1"><label>Terapeutas </label></th>
																<th style="width: 30%;"colspan="1"><label>Substitutos</label></th>
																<th style="width: 40%;" colspan="1"><label>Observação </label></th>
															</tr>
														</thead>
														<tbody>
															<tr><!-- 1AReg -->
																<td>
																	<select name="excecaoTerapiaid" id="excecaoTerapiaid"  class="chosen-select" data-placeholder="Escolha..." >
																		<option value="766f69643132333435366964">-</option>
																		{{#each terapias}}
																		<option value="{{_id}}">{{terapia_nome}}</option>
																		{{else}}
																		{{/each}}
																	</select>
																</td>
																<td>
																	<div>
																		<select name="excecaoTerapeutaid" id="excecaoTerapeutaidtemp" multiple="chosen-select-especial tag-input-style" class="chosen-select-especial tag-input-style" data-placeholder="Escolha os terapeutas..." style="width:100%;" onchange="atualizaTerapeuta()">
																			<option value="766f69643132333435366964">-</option>
																			{{#each terapeutas}}
																			<option value="{{_id}}">{{usuario_nome}}</option>
																			{{else}}
																			{{/each}}
																		</select><select name="excecaoTerapeutaid" id="excecaoTerapeutaidtemp" >
																			<option value="766f69643132333435366964">-</option>
																			{{#each terapeutas}}
																			<option value="{{_id}}">{{usuario_nome}}</option>
																			{{else}}
																			{{/each}}
																		</select>
																	</div>
																</td>
																<td>
																	<div>
																		<select name="excecaoSubstitutoid" id="excecaoSubstitutoidtemp" multiple="chosen-select-especial tag-input-style" class="chosen-select-especial tag-input-style" data-placeholder="Escolha os terapeutas..." style="width:100%;" onchange="atualizaSubstituto()">
																			<option value="766f69643132333435366964">-</option>
																			{{#each terapeutas}}
																			<option value="{{_id}}">{{usuario_nome}}</option>
																			{{else}}
																			{{/each}}
																		</select>
																	</div>
																</td>
																
																<td>
																	<textarea type="text" name="excecaoObs" id="excecaoObs" placeholder="" class="form-control" style="font-size: 12px;"></textarea>
																</td>
															</tr>
															
														</tbody>
													</table>
												</div>
											</div>
										</div>
									</div>
										
								
								

									<div class="col-sm-12" style="text-align: center;"><!-- Widget Dados Básicos -->
										<button class="btn btn-info"  name="acao" type="submit">
											<i class="ace-icon fa fa-check bigger-110"></i>
											Salvar
										</button>

									</div>
							</form>

						</div><!-- /.col -->
					</div><!-- /.row -->




				</div>
			</div><!-- /.main-content -->


		</div><!-- /.main-container -->
		<!-- basic scripts -->
	
	</body>
</html>
