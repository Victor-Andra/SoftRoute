																	{{else}}
																	{{/each}}
																</select>
															</td>
															<td>
																<div>
																	<select name="excecaoTerapeutaidselect" id="excecaoTerapeutaidselect" onchange="addExcecaoTerapeutaid();">
																		<option value="766f69643132333435366964">-</option>
																		{{#each terapeutas}}
