					// Selecione o controle select
					var selectTerapeuta = $("#excecaoTerapeutaidtemp");

					// Armazene as opções padrão
					var defaultOptions = selectTerapeuta.html();

					// Remova todas as opções existentes
					selectTerapeuta.empty();

					// Adicione as opções padrão de volta
					selectTerapeuta.append(defaultOptions);

					// Adicione novas opções com base nos IDs da terapia
					terapiaIds.forEach(function(terapiaId) {
						selectTerapeuta.find('option[value="' + terapiaId + '"]').prop('selected', true);
					});

					// Atualize o controle Chosen
					selectTerapeuta.trigger("chosen:updated");

