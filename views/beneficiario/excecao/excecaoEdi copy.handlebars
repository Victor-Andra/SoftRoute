		<script>
			document.addEventListener("DOMContentLoaded", function () {
				const terapeutas = [
				{{#each terapeutas}}
					{_id:"{{_id}}",usuario_nome:"{{usuario_nome}}"},
					{{else}}
				{{/each}}
			];
		const terapeutasSelecionadosElement = document.getElementById("excecaoTerapeutaid");
        const terapeutasSelecionadosString = terapeutasSelecionadosElement.value;
        const terapeutasSelecionados = terapeutasSelecionadosString.split(",");

        const customSelect = document.getElementById("customSelect");
        const selectedOptionsContainer = document.getElementById("selectedOptions");
        const optionsList = document.getElementById("optionsList");
        const searchInput = document.getElementById("searchInput");

        terapeutas.forEach(terapeuta => {
            const option = document.createElement("div");
            option.className = "option";
            option.textContent = terapeuta.usuario_nome;
            option.dataset.id = terapeuta._id;
            optionsList.appendChild(option);

            if (terapeutasSelecionados.includes(terapeuta._id)) {
                const selectedOption = option.cloneNode(true);
                selectedOption.className = "selected-option";
                const removeIcon = document.createElement("span");
                removeIcon.className = "remove-icon";
                removeIcon.textContent = "x";
                removeIcon.addEventListener("click", function () {
                    selectedOption.remove();
                    option.classList.remove("selected");
                });
                selectedOption.appendChild(removeIcon);
                selectedOptionsContainer.appendChild(selectedOption);
                option.classList.add("selected");
            }
        });

        customSelect.addEventListener("click", function () {
            optionsList.style.display = optionsList.style.display === "none" ? "block" : "none";
        });

        searchInput.addEventListener("input", function () {
            const searchTerm = searchInput.value.toLowerCase();
            const options = optionsList.querySelectorAll(".option");
            options.forEach(option => {
                const text = option.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    option.style.display = "block";
                } else {
                    option.style.display = "none";
                }
            });
        });

        optionsList.addEventListener("click", function (event) {
            if (event.target.classList.contains("option") && !event.target.classList.contains("selected")) {
                const selectedOption = event.target.cloneNode(true);
                selectedOption.className = "selected-option";
                const removeIcon = document.createElement("span");
                removeIcon.className = "remove-icon";
                removeIcon.textContent = "x";
                removeIcon.addEventListener("click", function () {
                    selectedOption.remove();
                    event.target.classList.remove("selected");
                });
                selectedOption.appendChild(removeIcon);
                selectedOptionsContainer.appendChild(selectedOption);
                event.target.classList.add("selected");
                searchInput.value = "";
                optionsList.style.display = "none";
            }
        });

        document.addEventListener("click", function (event) {
            if (!customSelect.contains(event.target)) {
                optionsList.style.display = "none";
            }
        });
    });
		</script>
