<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title>Horários</title>
	</head>

	<body onload="javascript:controlaNave();" class="no-skin">


		<div class="main-container ace-save-state" id="main-container">


			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Home</a>
							</li>

							<li class="active">Horários Edição</li>
						</ul><!-- /.breadcrumb -->

					</div>

					<div class="row">
						<div class="col-xs-12">
							<!-- PAGE CONTENT BEGINS -->
							<form class="form-horizontal" role="form" action="/menu/ferramentas/horaage/atualizar" method="POST">


								<div class="col-sm-12"><!-- Widget Dados Básicos -->
									<div class="widget-box">
										<div class="widget-header">
											<h4 class="widget-title">Horários</h4>

											<span class="widget-toolbar">

												<a href="#" data-action="reload">
													<i class="ace-icon fa fa-refresh"></i>
												</a>

												<a href="#" data-action="collapse">
													<i class="ace-icon fa fa-chevron-up"></i>
												</a>

											</span>
										</div>

										<div class="widget-body">
											<div class="widget-main">


				
												<label> Hora</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="horaageHora" id="horaageHora" class="form-control" value="{{horaage.horaage_hora}}" />
													</div>
												</div>

												<div class="space space-8"></div>
												<label> Ordem</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="horaageOrdem" id="horaageOrdem" class="form-control" value="{{horaage.horaage_ordem}}"/>
													</div>
												</div>

												<div class="space space-8"></div>
												<label> Turno</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="horaageTurno" id="horaageTurno" class="form-control" value="{{horaage.horaage_turno}}"/>
													</div>
												</div>

												<div class="space space-8"></div>
												<label> Status</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="horaageStatus" id="horaageStatus" class="form-control" value="{{horaage.horaage_status}}"/>
													</div>
												</div>


												<div class="hidden">
													<input name="horaageId" value="{{horaage._id}}" />
												</div>

											</div>
										</div>
									</div>
								</div>
								<div class="space-4"></div>

								<div class="form-actions">
									<div class="col-md-offset-3 col-md-9">
										<button class="btn btn-info" name="acao" type="submit">
											<i class="ace-icon fa fa-check bigger-110"></i>
											Salvar
										</button>

										&nbsp; &nbsp; &nbsp;
										<button class="btn btn-warning"  href="/menu/ferramentas/horaage/lis">
											<i class="ace-icon fa fa-undo bigger-110"></i>
											Voltar
										</button>
									</div>
								</div>
							
							</form>


						</div><!-- /.col -->
					</div><!-- /.row -->




				</div>
			</div><!-- /.main-content -->


		</div><!-- /.main-container -->





		<!-- basic scripts -->

	</body>
</html>
