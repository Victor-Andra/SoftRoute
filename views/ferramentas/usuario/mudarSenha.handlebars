					console.log("FALSE regexNAlpha.test(palavra): "+palavra);
					document.getElementById("verLetraesp").checked = false;
					checkNAlpha = false;
				}

				if (checkLength && checkMinusculo && checkMaiusculo && checkNumero && checkNAlpha){
					return true;
				} else {
					return false;
				}
			}

