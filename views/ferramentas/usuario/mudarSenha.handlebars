					document.getElementById("verLetramai").checked = true;
					checkMaiusculo = true;
				} else {
					console.log("FALSE regexMaiusculo.test(palavra): "+palavra);
					document.getElementById("verLetramai").checked = false;
					checkMaiusculo = false;
				}
				if (regexNumero.test(palavra)){
					console.log("TRUE regexNumero.test(palavra): "+palavra);
					document.getElementById("verLetranum").checked = true;
					checkNumero = true;
				} else {
					console.log("FALSE regexNumero.test(palavra): "+palavra);
					document.getElementById("verLetranum").checked = false;
					checkNumero = false;
				}
				if (regexNAlpha.test(palavra)){
					console.log("TRUE regexNAlpha.test(palavra): "+palavra);
					document.getElementById("verLetraesp").checked = true;
					checkNAlpha = true;
