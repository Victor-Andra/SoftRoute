<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title>Estados</title>
	</head>
	<body class="no-skin">
		<div class="main-container ace-save-state" id="main-container">
			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Estado Editar</a>
							</li>
							<li class="active">Estado Editar</li>
						</ul><!-- /.breadcrumb -->
					</div>
					<div class="row">
						<div class="col-xs-12">
							<!-- PAGE CONTENT BEGINS -->
							<form class="form-horizontal" role="form"  action="/menu/ferramentas/estado/atualizar" method="POST">
								<div class="col-sm-12"><!-- Widget Dados Básicos -->
									<div class="widget-box">
										<div class="widget-header">
											<h4 class="widget-title">Estados</h4>
											<span class="widget-toolbar">
												<a href="#" data-action="reload">
													<i class="ace-icon fa fa-refresh"></i>
												</a>
												<a href="#" data-action="collapse">
													<i class="ace-icon fa fa-chevron-up"></i>
												</a>
											</span>
										</div>
										<div class="widget-body">
											<div class="widget-main">
											
									
													<label> Nome da Estado</label>
													<div class="form-group">
														<div class="col-sm-6">
															<input type="text" name="estadoNome" id="estadoNome" class="form-control" value="{{estado_nome}}" />
														</div>
													</div>
													<div class="space space-8"></div>
													<label> Código</label>
													<div class="form-group">
														<div class="col-sm-2">
															<input type="text" name="estadoCodigo" id="estadoCodigo" class="form-control" value="{{estado_cod}}"/>
														</div>
													</div>

													<div class="space space-8"></div>
													<label> UF</label>
													<div class="form-group">
														<div class="col-sm-2">
															<input type="text" name="estadoUf" id="estadoUf" class="form-control" value="{{estado_uf}}"/>
														</div>
													</div>




												<div class="hidden">
													<input name="estadoId"value="{{_id}}" />
												</div>
											
											
											</div>
										</div>
									</div>
								</div>
								<div class="space-4"></div>
								<div class="clearfix form-actions">
									<div class="col-md-offset-3 col-md-9">
										<button class="btn btn-info"  name="acao" type="submit">
											<i class="ace-icon fa fa-check bigger-110"></i>
											Salvar
										</button>
										&nbsp; &nbsp; &nbsp;
										<button class="btn btn-warning"  href="/menu/ferramentas/estado/lis">
											<i class="ace-icon fa fa-undo bigger-110"></i>
											Voltar
										</button>
									</div>
								</div>
							</form>
						</div><!-- /.col -->
					</div><!-- /.row -->
				</div>
			</div><!-- /.main-content -->
		</div><!-- /.main-container -->
		<!-- basic scripts -->
	</body>
</html>
