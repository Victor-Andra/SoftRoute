<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title>Créditos de Convênios Edição</title>
		<script type="text/javascript">
			function carregaBody(){
				let data = document.getElementById("dataEdi").value;

				let ano = data.substring(0,4);
				let mes = data.substring(5,7);
				let dia = data.toString().substring(8,10);
				/*
				let prs = parseInt(mes,10);
				prs=prs-1;
				//console.log("prs:"+prs)
				let mesformat;
				if(prs<=9){
					mesformat = "0"+prs+""
				} else {
					mesformat = ""+prs+""
				}
				
				let dt = new Date(ano,mesformat,dia,0,0,0,0)
				dt.setUTCHours(0);
				dt.setMinutes(0);
				dt.setSeconds(0);
				*/
				let fulldate=(ano+"-"+mes+"-"+dia).toString();
				document.getElementById("convcreData").value = fulldate;
				document.getElementById("convcreConvid").value = document.getElementById("convIdEdi").value;
				document.getElementById("convcreTerapiaid").value = document.getElementById("terapiaIdEdi").value;
				atualizaData();
			}
			function atualizaData(){
				var hora = "00:00"
				var data = document.getElementById("convcreData").value+"T"+hora+":00.000Z";
				var datafmt = new Date(data);
				document.getElementById("convcreDataFinal").value = datafmt.toISOString();
			}
		</script>
	</head>

	<body class="no-skin" onload="javascript:carregaBody();controlaNave();">


		<div class="main-container ace-save-state" id="main-container">


			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Home</a>
							</li>

							<li class="active">Créditos de Convênios Edição</li>
						</ul><!-- /.breadcrumb -->

					</div>

					<div class="row">
						<div class="col-xs-12">
							<!-- PAGE CONTENT BEGINS -->
							<form class="form-horizontal" role="form"  action="/menu/convenio/convcre/atualizar" method="POST">

								<div class="col-sm-12"><!-- Widget Dados Básicos -->
									<div class="widget-box">
										<div class="widget-header">
											<h4 class="widget-title">Crédito de Convênios</h4>

											<span class="widget-toolbar">

												<a href="#" data-action="reload">
													<i class="ace-icon fa fa-refresh"></i>
												</a>

												<a href="#" data-action="collapse">
													<i class="ace-icon fa fa-chevron-up"></i>
												</a>

											</span>
										</div>

										<div class="widget-body">
											<div class="widget-main">
												<input name="convcreId" id="convcreId" class="hidden" value="{{convcre._id}}"/>
												<label> Convênio </label>
												<div class="form-group">
													<div class="col-sm-4">
														<select name="convcreConvid" id="convcreConvid" class="chosen-select" data-placeholder="Escolha...">
															{{#each convs}}
															<option value="{{_id}}">{{conv_nome}}</option>
															{{else}}
															{{/each}}
														</select>
													</div>
												</div>
<!--
												<label> Convênio</label>
												<div class="form-group" class="hidden">
													<div class="col-sm-6">
														<input type="text" name="convcreConvnome"  id="convcreConvnome" value="{{convcre.convcre_convnome}}" class="form-control" />
													</div>
												</div>
-->
												<label>Terapia</label>
												<div class="form-group">
													<div class="col-sm-4">
														<select name="convcreTerapiaid" id="convcreTerapiaid" class="chosen-select" data-placeholder="Escolha...">
															{{#each terapias}}
															<option value="{{_id}}">{{terapia_nome}}</option>
															{{else}}
															{{/each}}
														</select>
													</div>
												</div>

												<label for="id-date-picker-1">Data</label>
												<div class="row">
													<div class="col-sm-3">
														<div class="input-group">
															<input name="convcreData" id="convcreData" type="date" onchange="javascript:atualizaData()" />
															<input name="convcreDataFinal" id="convcreDataFinal" class="hidden" />
														</div>
													</div>
												</div>

												<div class="space space-8"></div>
												<label> Valor de Crédito</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="convcreValor" placeholder="" class="form-control" value="{{convcre.convcre_valor}}"/>
													</div>
												</div>

												<div class="space space-8"></div>
												<label> Observações</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="convcreObs" id="convcreObs" placeholder="" class="form-control" value="{{convcre.convcre_obs}}"/>
													</div>
												</div>

												<div class="hidden" id="divCarrega">
													<input id="convIdEdi" nome="convIdEdi" value="{{convcre.convcre_convid}}" />
													<input id="terapiaIdEdi" nome="terapiaIdEdi" value="{{convcre.convcre_terapiaid}}" />
													<input id="dataEdi" nome="dataEdi"  value="{{convcre.convcre_data}}" />
												</div>


											</div>
										</div>
									</div>
								</div>
							
								<div class="space-6"></div>

									<div class="form-actions">
										<div class="col-xs-12" style="text-align: center;" >
											<button class="btn btn-info" name="acao" type="submit">
												<i class="ace-icon fa fa-check bigger-110"></i>
												Salvar
											</button>

											&nbsp; &nbsp; &nbsp;
											<button class="btn btn-warning"  href="/menu/convenio/convcre/lis">
												<i class="ace-icon fa fa-undo bigger-110"></i>
												Voltar
											</button>
										</div>
									</div>

							</form>
						</div><!-- /.col -->
					</div><!-- /.row -->




				</div>
			</div><!-- /.main-content -->


		</div><!-- /.main-container -->





		<!-- basic scripts -->

	</body>
</html>
