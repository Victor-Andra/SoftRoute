<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title>Débitos de Convênios</title>
	</head>
	<body class="no-skin">
		<div class="main-container ace-save-state" id="main-container">
			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Home</a>
							</li>
							<li class="active">Débitos de Convênios Cadastro</li>
						</ul><!-- /.breadcrumb -->
					</div>
					<div class="row">
						<div class="col-xs-12"><!-- PAGE CONTENT BEGINS -->
							<form class="form-horizontal" role="form" action="/menu/convenio/convdeb/add" method="POST">
								<div class="col-sm-12"><!-- Widget Dados Básicos -->
									<div class="widget-box">
										<div class="widget-header">
											<h4 class="widget-title">Débito de Convênios</h4>
											<span class="widget-toolbar">
												<a href="#" data-action="reload">
													<i class="ace-icon fa fa-refresh"></i>
												</a>
												<a href="#" data-action="collapse">
													<i class="ace-icon fa fa-chevron-up"></i>
												</a>
											</span>
										</div>
										<div class="widget-body">
											<div class="widget-main">
												<label>Convênio</label>
												<div class="form-group">
													<div class="col-sm-4">
														<select name="convdebConvid" id="convdebConvid" class="chosen-select" data-placeholder="Escolha...">
															{{#each convs}}
																<option value="{{_id}}">{{conv_nome}}</option>
															{{/each}}
														</select>
													</div>
												</div>
<!--
												<label> Convênio</label>
												<div class="form-group" class="hidden">
													<div class="col-sm-6">
														<input type="text" name="convdebConvnome"  id="convdebConvnome" value="{{convdebConvid}}" class="form-control" />
													</div>
												</div>
-->
												<label>Terapia</label>
												<div class="form-group">
													<div class="col-sm-4">
														<select name="convdebTerapiaid" id="convdebTerapiaid" class="chosen-select" data-placeholder="Escolha...">
															{{#each terapias}}
																<option value="{{_id}}">{{terapia_nome}}</option>
															{{/each}}
														</select>
													</div>
												</div>
												<label for="id-date-picker-1">Data</label>
												<div class="row">
													<div class="col-sm-3">
														<div class="input-group">
															<input name="convdebData" id="convdebData" type="date"  />
														</div>
													</div>
												</div>
												<div class="space space-8"></div>
												<label> Valor de Débito</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="convdebValor" id="convdebValor" placeholder="" class="form-control" />
													</div>
												</div>
												<div class="space space-8"></div>
												<label> Observações</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="convdebObs" id="convdebObs" placeholder="" class="form-control" />
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
								<div class="space-6"></div>
								<div class="clearfix form-actions">
									<div class="col-md-offset-3 col-md-9">
										<button class="btn btn-info" name="acao" type="submit">
											<i class="ace-icon fa fa-check bigger-110"></i>
											Salvar
										</button>
										&nbsp; &nbsp; &nbsp;
										<button class="btn btn-warning"  type="reset">
											<i class="ace-icon fa fa-undo bigger-110"></i>
											Voltar
										</button>
									</div>
								</div>
							</form>
						</div><!-- /.col -->
					</div><!-- /.row -->
				</div>
			</div><!-- /.main-content -->
		</div><!-- /.main-container -->
	</body><!-- basic scripts -->
</html>
