<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title>Impostos</title>
		<script>
		
			function carregaBody(){
				let dtnsc = new Date(document.getElementById("impostoDataEdi").value);
				let mes = (dtnsc.getMonth()+1).toString();
				let dia = (dtnsc.getUTCDate()).toString();
				if (mes.length == 1){
					mes = "0"+mes;
				}
				if (dia.length == 1){
					dia = "0"+dia;
				}
				let fulldate=(dtnsc.getFullYear()+"-"+mes+"-"+dia).toString();

				document.getElementById("impostoNome").value = document.getElementById("impostoNomeEdi").value;
				document.getElementById("impostoEsfera").value = document.getElementById("impostoEsferaEdi").value;
				document.getElementById("impostoAlqpad").value = document.getElementById("impostoAlqpadEdi").value;
				document.getElementById("impostoStatus").value = document.getElementById("impostoStatusEdi").value;
				document.getElementById("impostoData").value = fulldate;
				
				}
			
		</script>
	</head>
	<body onload="javascript:controlaNave();carregaBody();" class="no-skin">
		<div class="main-container ace-save-state" id="main-container">
			<div class="main-content">
				<div class="main-content-inner">
					<div class="espace">
					</div>
					<div class="page-header">
						<h1>
							Impostos
							<small>
								<i class="ace-icon fa fa-angle-double-right"></i>
								Cadastro e Índice Geral dos Impostos
							</small>
						</h1>
						<div id="divCarrega" name="divCarrega" class="hidden">
							<!-- /.importante Id de indice-->
							<!-- /.IMPORTANTE!!! TODOS type DEVEM SER text !!!!!!!!!!!-->
							<input type="text" id="impostoNomeEdi" name="impostoNomeEdi" value="{{imposto.imposto_nome}}"/>
							<input type="text" id="impostoEsferaEdi" name="impostoEsferaEdi" value="{{imposto.imposto_esfera}}"/>
							<input type="text" id="impostoAlqpadEdi" name="impostoAlqpadEdi" value="{{imposto.imposto_alqpad}}"/>
							<input type="text" id="impostoStatusEdi" name="impostoStatusEdi" value="{{imposto.imposto_status}}"/>
							<input type="text" id="impostoDataEdi" name="impostoDataEdi" value="{{imposto.imposto_dataedi}}"/>
							
						</div>
					</div><!-- /.page-header -->
					<div class="row">
						<div class="col-xs-12">
							<form class="form-horizontal" role="form" action="/menu/financeiro/imposto/atualizar" method="POST">
								<input id="id" name="id" class="hidden" value="{{imposto._id}}" />
								<div class="col-xs-12">

								
									<div class="col-sm-12" name="infoad" id="infoad"><!-- Informações do Imposto -->
										<div class="widget-box">
											<div class="widget-header">
												<h4 class="widget-title">
													<i class="red ace-icon fa fa-paw bigger-110"></i>
													Informações dos impostos
												</h4>
												
												<span class="widget-toolbar">

													<a href="#" data-action="reload">
														<i class="ace-icon fa fa-refresh"></i>
													</a>

													<a href="#" data-action="collapse">
														<i class="ace-icon fa fa-chevron-up"></i>
													</a>

												</span>
											</div>

											<div class="widget-body">
												<div class="widget-main">
													<div class="row">
														<div class="col-xs-12">
															<div class="alert alert-warning">
																<button type="button" class="close" data-dismiss="alert">
																	<i class="ace-icon fa fa-times"></i>
																</button>
																Aqui você cadastra os impostos que vão ser imputados para os planos e beneficiários para emissão das Notas Fiscais
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-xs-12" >
															<label>Nome do Imposto:</label>
															<div class="row">
																<div class="col-xs-12">
																	<input name="impostoNome" id="impostoNome" style="font-size: 12px"  class="form-control" />
																</div>
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-xs-6 col-sm-6">
															<label>Tipo Tipo:</label>
															<div class="row">
																<div class="col-sm-9">
																	<select id="impostoEsfera" name="impostoEsfera" class="chosen-select" >
																		<option value="-">-</option>
																		<option value="Federal">Federal</option>
																		<option value="Estadual">Estadual</option>
																		<option value="Municipal">Municipal</option>
																	</select>
																</div>
															</div>
														</div>
														<div class="col-xs-6 col-sm-6">
