			function carregaBody(){
				let dias = ["seg","ter","qua","qui","sex"];
				try{
					dias.forEach((dia)=>{
						console.log("dia:"+dia)
						document.getElementsByName(dia).forEach((e)=>{
							console.log("e.value")
							console.log(e.value)
							console.log("e.id")
							console.log(e.id)
							let id = "hora"+e.id;
							let valor = e.value;
