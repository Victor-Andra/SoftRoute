			function ajustaData(){
				let fullDatas = document.getElementsByName("fullData");
				fullDatas.forEach((elementox)=>{
					let id = "atenddata"+elementox.id;
					let dat = new Date(elementox.value);
					let mes = (dat.getMonth()+1).toString();
					let dia = (dat.getUTCDate()).toString();

					if (mes.length == 1){
						mes = "0"+mes;
