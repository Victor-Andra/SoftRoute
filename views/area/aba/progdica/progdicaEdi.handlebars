<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title>Dicas dos programas ABA Editar</title>
	</head>

	<body onload="javascript:controlaNave();" class="no-skin">


		<div class="main-container ace-save-state" id="main-container">


			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state" id="breadcrumbs">
						<ul class="breadcrumb">
							<li>
								<i class="ace-icon fa fa-home home-icon"></i>
								<a href="#">Dica Editar</a>
							</li>

							<li class="active">Dica Editar</li>
						</ul><!-- /.breadcrumb -->

					</div>

					<div class="row">
						<div class="col-xs-12">
							<!-- PAGE CONTENT BEGINS -->
							<form class="form-horizontal" role="form" action="/menu/area/aba/progdica/atualizar" method="POST">


								<div class="col-sm-12"><!-- Widget Dados Básicos -->
									<div class="widget-box">
										<div class="widget-header">
											<h4 class="widget-title">Dicas</h4>

											<span class="widget-toolbar">

												<a href="#" data-action="reload">
													<i class="ace-icon fa fa-refresh"></i>
												</a>

												<a href="#" data-action="collapse">
													<i class="ace-icon fa fa-chevron-up"></i>
												</a>

											</span>
										</div>

										<div class="widget-body">
											<div class="widget-main">

												<div class="hidden">
													<input id="idProgdica" name="idProgdica" value="{{progdica._id}}" />
												</div>
				
												<label> Dica</label>
												<div class="form-group">
													<div class="col-sm-12">
														<input type="text" name="progdicaNome" id="progdicaNome" class="form-control" value="{{progdica.progdica_nome}}"/>
													</div>
												</div>
												
												<label> Ordem</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="progdicaOrdem" id="progdicaOrdem"  class="form-control" value="{{progdica.progdica_ordem}}"/>
													</div>
												</div>
				
												<label> Descrição</label>
												<div class="form-group">
													<div class="col-sm-6">
														<input type="text" name="progdicaDescricao" id="progdicaDescricao" class="form-control" value="{{progdica.progdica_descricao}}"/>
													</div>
												</div>

												



											</div>
										</div>
									</div>
								</div>
							
							
								<div class="space-4"></div>							
								<div class="space-4"></div>
	
								<div class="form-actions">
									<div class="col-md-offset-3 col-md-9">
										<button class="btn btn-info"  name="acao" type="submit">
											<i class="ace-icon fa fa-check bigger-110"></i>
											Salvar
										</button>
	<!--
										&nbsp; &nbsp; &nbsp;
										<button class="btn btn-warning"  href="/menu/area/aba/metodo/lis">
											<i class="ace-icon fa fa-undo bigger-110"></i>
											Voltar
										</button>
	-->
									</div>
								</div>

							</form>


						</div><!-- /.col -->
					</div><!-- /.row -->




				</div>
			</div><!-- /.main-content -->


		</div><!-- /.main-container -->





		<!-- basic scripts -->

	</body>
</html>
