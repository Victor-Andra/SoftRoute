<!DOCTYPE html>
<html lang="pt-br">
	<head>
		<title>Laudos</title>
	</head>
	<body onload="javascript:controlaNave();" class="no-skin">
		<div class="main-container ace-save-state" id="main-container">
			<div class="main-content">
				<div class="main-content-inner">
					<div class="espace">
					</div>
					<div class="page-header">
						<h1>
							Laudos
							<small>
								<i class="ace-icon fa fa-angle-double-right"></i>
								Cadastro e Índice Geral Laudos
							</small>
						</h1>
					</div><!-- /.page-header -->
					<div class="row">
						<div class="col-xs-12">
							<form class="form-horizontal" role="form" action="/menu/area/laudo/add" method="POST">
								<div class="col-xs-12">

									<div class="col-sm-12" name="ident" id="ident"><!-- Widget Beneficiario-->
										<div class="widget-box">
											<div class="widget-header">
												<h4 class="widget-title">
													<i class="brown ace-icon fa fa-child bigger-110"></i>
													Beneficiário
												</h4>
												
												<span class="widget-toolbar">

													<a href="#" data-action="reload">
														<i class="ace-icon fa fa-refresh"></i>
													</a>

													<a href="#" data-action="collapse">
														<i class="ace-icon fa fa-chevron-up"></i>
													</a>

												</span>
											</div>

											<div class="widget-body">
												<div class="widget-main">
													
													<div class="row">
														<div class="col-xs-12 col-sm-4">
															<label>Beneficiário:</label>
															<div class="form-group">
																<div class="col-sm-8">
																	<select name="laudoBeneid" id="laudoBeneid" class="chosen-select" data-placeholder="-" placeholder="Colocar nome completo." >
																		<option value="766f69643132333435366964">-</option>
																		{{#each benes}}
																			<option value="{{_id}}">{{bene_nome}}</option>
																		{{/each}}
																	</select>
																</div>
															</div>
														</div>												
													</div>
												</div>	
											</div>	
										</div>
									</div>
									<div class="col-sm-12" name="infobene" id="infobene"><!-- Widget Beneficiario-->
										<div class="widget-box">
											<div class="widget-header">
												<h4 class="widget-title">
													<i class="brown ace-icon fa fa-commenting-o bigger-110"></i>
													Informações complemetares
												</h4>
												
												<span class="widget-toolbar">

													<a href="#" data-action="reload">
														<i class="ace-icon fa fa-refresh"></i>
													</a>

													<a href="#" data-action="collapse">
														<i class="ace-icon fa fa-chevron-up"></i>
													</a>

												</span>
											</div>

											<div class="widget-body">
												<div class="widget-main">
													<div class="row">
														<div class="col-xs-12">
															<div class="alert alert-warning">
																<button type="button" class="close" data-dismiss="alert">
																	<i class="ace-icon fa fa-times"></i>
																</button>
																Os campos aqui são preenchidos automaticamente.
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-xs-5 col-sm-5">
															<label>Data nascimento:</label>
															<div class="form-group">
																<div class="col-sm-5">
																	<div class="input-group">
																		<input name="beneDatanasc" id="beneDatanasc" type="date" class="readonly" onchange="javascript:atualizaData()" />
																	</div>
																</div>
															</div>
														</div>												
													
														<div class="col-xs-3 col-sm-3">
															<label>Idade:</label>
															<div class="row">
																<div class="col-sm-3">
																	<div class="input-group">
																		<input name="beneIdade" id="beneIdade" type="text" class="readonly" onchange="" />
																	</div>
																</div>
															</div>
														</div>
														
													</div>
													<div class="row">
														<div class="col-xs-6 col-sm-6">
															<label>Nome mãe:</label>
															<div class="row">
																<div class="col-sm-6">
																	<div class="input-group">
																		<input type="text" name="beneMae" id="beneMae"  class="readonly" class="form-control" />
																	</div>
																	
																</div>
															</div>
														</div>
													
														<div class="col-xs-6 col-sm-6">
															<label>Nome pai:</label>
															<div class="row">
																<div class="col-sm-6">
																	<div class="input-group">
																		<input type="text" name="benePai" id="benePai" class="readonly" class="form-control" />
																	</div>
																	
																</div>
															</div>
														</div>
													</div>
													
													
													
													
												</div>	
											</div>	
										</div>
									</div>
									<div class="col-sm-12" name="infoad" id="infoad"><!-- Informações do Laudo -->
										<div class="widget-box">
											<div class="widget-header">
												<h4 class="widget-title">
													<i class="green ace-icon fa fa-search bigger-110"></i>
													Informações do laudo
												</h4>
												
												<span class="widget-toolbar">

													<a href="#" data-action="reload">
														<i class="ace-icon fa fa-refresh"></i>
													</a>

													<a href="#" data-action="collapse">
														<i class="ace-icon fa fa-chevron-up"></i>
													</a>

												</span>
											</div>

											<div class="widget-body">
												<div class="widget-main">
													<div class="row">
														<div class="col-xs-12">
															<div class="alert alert-warning">
																<button type="button" class="close" data-dismiss="alert">
																	<i class="ace-icon fa fa-times"></i>
																</button>
																O campo do diagnóstico é importantíssimo e será consultado em todos os formulários no sistema,<br>
																atenção na hora de copiá-lo do laudo original e deve conter os códigos da tabela CID e texto.
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-xs-12 col-sm-6" >
															<label>Diagnóstico:</label>
															<div class="row">
																<div class="col-xs-12 col-sm-6">
																	<textarea name="laudoDiag" id="laudoDiag" style="font-size: 12px" data-placeholder="-" value="-" placeholder="Utilizar o diagnóstico que está escrito no laudo médico." class="form-control"></textarea>
																</div>
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-xs-6 col-sm-6">
															<label>Médico responsável:</label>
															<div class="row">
																<div class="col-sm-6">
																	<div class="input-group">
																		<input type="text" name="laudoMedico" id="laudoMedico" class="readonly" class="form-control"  />
																	</div>
																</div>
															</div>
														</div>
													
														<div class="col-sm-12">
															<label>Especialidade:</label>
															<div class="row">
																<div class="col-sm-12">
																	<div class="input-group">
																		<input type="text" name="laudoMedicoesp" id="laudoMedicoesp" class="readonly" class="form-control" />
																	</div>
																	
																</div>
															</div>
														</div>
													</div>
													<div class="row">
														<div class="col-sm-4">
															<label for="id-date-picker-1">Data do laudo:</label>
															<div class="row">
																<div class="col-sm-4">
																	<div class="input-group">
																		<input name="laudoData" id="laudoData" type="date" />
																	</div>
																</div>
															</div>
														</div>
														
													</div>
													
												</div>	
											</div>	
										</div>
									</div>
									
									<div class="col=xs=12">
										<hr>
									</div>
									<div class="form-actions">
										<div class="col-xs-12" style="text-align: center;" >
											<button class="btn btn-info" name="acao" type="submit">
												<i class="ace-icon fa fa-check bigger-110"></i>
												Salvar
											</button>
											&nbsp; &nbsp; &nbsp;
											<button class="btn btn-warning"  type="reset">
												<i class="ace-icon fa fa-undo bigger-110"></i>
												Voltar
											</button>
										</div>
									</div>
								</div>							
							</form>
						</div>
					</div>
				</div><!-- /.main-container -->
			</div><!-- /.main-content -->
		</div>
	</body>
</html>